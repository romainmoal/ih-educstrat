<h1>Search for the best path to a job or a university</h1>

<div id="search-section">
  <form id="form" autocomplete="off" action="/main" method="POST">
      <div class="md-form">
        <label for="school">Find your school/university<br>
        <input type="text" id="searchSchool" name="school"
        placeholder="Enter a school..." class="form-control">
        <div id="listeSchool" class="list-group"></div>
      </div>
      <div class="md-form">
        <label for="jobTitle">Find your job<br>
        <input type="text" id="searchJob" name="jobTitle"
        placeholder="Enter a job..." class="form-control">
        <ul id="listeJob" class="list-group"></ul>
      </div>
    {{#if errorMessage }}
      <div class="error-message">{{ errorMessage }}</div>
    {{/if}}
    <button type="submit" class="btn btn-primary mb-2">Search</button>
  </form>

</div>

